<Window x:Class="Tema4_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema4_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="850">
    <Window.Resources>
        <Style  x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0000ac"/>
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Cambria" />
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/1.png"/>
    </Window.Background>
    <Grid Margin="150 310 0 0">
        <Button Content="Inregistrare" Height="50" Style="{StaticResource ButtonStyle}" Click="Button_Click" Margin="0,0,485,151"/>
    </Grid>
</Window>
